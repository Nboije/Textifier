<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/startup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Textifier Startup View"
        android:id="@+id/textifierStartupView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Textifier"
        android:id="@+id/startTextifier"
        android:layout_below="@+id/textifierStartupView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="onStartTextifierClicked"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test picture"
        android:id="@+id/testPicture"
        android:layout_below="@+id/startTextifier"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="onTestPictureClicked"/>
</RelativeLayout>